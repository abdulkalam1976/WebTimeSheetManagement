
@{
    ViewBag.Title = "TimeSheet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>All Timesheet</h3>
<table id="grid"></table>
<div id="jqGridPager"></div>

<script>
    $(function () {
        $("#grid").jqGrid({
            url: '@Url.Action("LoadTimeSheetData", "ShowAllTimeSheet")',
            stype: 'GET',
            dataType: 'json',
            colNames: ['TimeSheetID', 'Date', 'Employee', 'Task Name', 'Total Hours', 'Status', 'Remarks', 'Created On', 'Action By', 'Action Date', 'Action Remarks'],
            colModel: [
              { label: "TimeSheetID", name: "TimeSheetID", hidden: true },
              { label: "Period", name: "Period", width: 100, align: "left" },
              { label: "Employee", name: "Username", width: 150, align: "left" },
              { label: "Task Name", name: "TaskName", width: 500, align: "left" },
               { label: "Total Hours", name: "TotalHours", width: 100, align: "center" },
               { label: "Status", name: "TimeSheetStatus", width: 100, align: "center" },
               { label: "Comment", name: "Comment", width: 350, align: "left" }
               ,
              { label: "CreatedOn", name: "CreatedOn", width: 100, align: "left" },
               { label: "ActionTakenBy", name: "ActionTakenBy", width: 150, align: "left" },
               { label: "ActionTakenOn", name: "ActionTakenOn", width: 100, align: "left" },
                { label: "ActionTakenRemarks", name: "ActionTakenRemarks", width: 350, align: "left" },
            ],
            loadonce: true,
            sortname: 'TimeSheetID',
            sortorder: "desc",
            sortable: true,
            pager: '#jqGridPager',
            rowNum: 15,
            rowList: [15, 25, 35, 50],
            viewrecords: true,
            height: 250
        });
        $('#grid div:not(.ui-jqgrid-titlebar)').width("100%");
        $('#load_grid').width("130");
        $('.ui-jqgrid-bdiv').css('height', window.innerHeight * .65);
        $('#grid').jqGrid('navGrid', '#jqGridPager', { edit: false, add: false, del: false })
    });
</script>

